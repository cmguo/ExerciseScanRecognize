<Page x:Class="Account.AccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Account"
      xmlns:vm="clr-namespace:Account.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Page.DataContext>
        <vm:AccountViewModel />
    </Page.DataContext>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="LightBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Log in" Grid.ColumnSpan="2" FontWeight="Bold" HorizontalAlignment="Center" Margin="5" FontSize="20"/>
        <TextBlock Text="Name" Grid.Row="1" Margin="3"/>
        <TextBox x:Name="txtName" Text="{Binding CurrentUser.LoginName}" Grid.Row="1" Grid.Column="1" Margin="3" MinWidth="100" HorizontalAlignment="Left"/>
        <TextBlock Text="Password" Grid.Row="2" Margin="3"/>
        <TextBox x:Name="txtPassword" Text="{Binding CurrentUser.Password}" Grid.Column="1" Grid.Row="2" Margin="3" MinWidth="100" HorizontalAlignment="Left"/>
        <Button Command="{Binding LoginCommand}" 
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Page}}}" 
                Content="Log in" Grid.Row="3" Grid.Column="1" Margin="3"/>
    </Grid>
</Page>
