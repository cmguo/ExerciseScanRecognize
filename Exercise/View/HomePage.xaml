<Page x:Class="Exercise.View.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exercise.View"
      xmlns:vm="clr-namespace:Exercise.ViewModel"
      xmlns:mu="clr-namespace:Panuon.UI;assembly=Panuon.UI"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Page.DataContext>
        <vm:HomeViewModel />
    </Page.DataContext>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <ComboBox ItemsSource="{Binding SourceList}" SelectedIndex="{Binding SourceIndex}" />
            <mu:PUButton Command="{Binding StartCommand}" 
                         Height="50"
                         Width="300"
                         FontSize="20"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Page}}}" 
                    BorderCornerRadius="3"
                         ButtonStyle="Hollow"
                         CoverBrush="Blue"
                         BorderBrush="Blue"
                         
                    Content="开始扫描" />
        </StackPanel>
    </Grid>
</Page>
