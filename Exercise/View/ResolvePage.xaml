<Page x:Class="Exercise.View.ResolvePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exercise.View"
      xmlns:resolve="clr-namespace:Exercise.View.Resolve"
      xmlns:vm="clr-namespace:Exercise.ViewModel"
      xmlns:pb="clr-namespace:Base.PushBinding;assembly=Base"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Page.DataContext>
        <vm:ResolveViewModel />
    </Page.DataContext>
    
    <Page.Resources>
        <resolve:ExceptionListConverter x:Key="ExceptionListConverter" />
        <resolve:ExceptionConverter x:Key="ExceptionConverter" />
        <resolve:ExceptionPageConverter x:Key="ExceptionPageConverter" />
    </Page.Resources>

    <Grid>
        <DockPanel>
            <TreeView ItemsSource="{Binding Exceptions}" DockPanel.Dock="Left" Width="200" >
                <pb:PushBindingManager.PushBindings>
                    <pb:PushBinding TargetProperty="SelectedValue" Path="SelectedException"/>
                </pb:PushBindingManager.PushBindings>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Exceptions}">
                        <TextBlock Text="{Binding Converter={StaticResource ExceptionListConverter}}"/>
                        <HierarchicalDataTemplate.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource ExceptionConverter}}" />
                            </DataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
            <StackPanel Orientation="Vertical" DockPanel.Dock="Right" Background="Gray"  Width="200">
                <Frame Content="{Binding SelectedException, Converter={StaticResource ExceptionPageConverter}}"/>
                <StackPanel Orientation="Vertical">
                    <Button Command="{Binding IgnoreCommand}" 
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Page}}}" 
                            Content="忽略所有作答异常" />
                    <Button Command="{Binding RescanCommand}" 
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Page}}}" 
                            Content="重新扫描" />
                    <Button Command="{Binding ContinueCommand}" 
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Page}}}" 
                            Content="批量扫描" />
                    <Button Command="{Binding RemovePageCommand}" 
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Page}}}" 
                            Content="丢弃该试卷" />
                    <Button Command="{Binding RemoveStudentCommand}" 
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Page}}}" 
                            Content="丢弃改学生成绩" />
                </StackPanel>
            </StackPanel>
            <DockPanel>
                <local:PaperViewer Paper="{Binding SelectedException.Page.PagePath}"/>
            </DockPanel>
        </DockPanel>
    </Grid>
</Page>
