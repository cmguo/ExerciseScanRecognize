<Page x:Class="Exercise.View.ResolvePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exercise.View"
      xmlns:resolve="clr-namespace:Exercise.View.Resolve"
      xmlns:vm="clr-namespace:Exercise.ViewModel"
      xmlns:pb="clr-namespace:Base.PushBinding;assembly=Base"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Page.DataContext>
        <vm:ResolveViewModel />
    </Page.DataContext>
    
    <Page.Resources>
        <resolve:ExceptionListConverter x:Key="ExceptionListConverter" />
        <resolve:ExceptionConverter x:Key="ExceptionConverter" />
        <resolve:ExceptionPageConverter x:Key="ExceptionPageConverter" />
    </Page.Resources>
    
    <Grid>
        <StackPanel Orientation="Vertical">
            <TreeView ItemsSource="{Binding Exceptions}" Width="400">
                <pb:PushBindingManager.PushBindings>
                    <pb:PushBinding TargetProperty="SelectedValue" Path="SelectedException"/>
                </pb:PushBindingManager.PushBindings>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Exceptions}">
                        <TextBlock Text="{Binding Converter={StaticResource ExceptionListConverter}}"/>
                        <HierarchicalDataTemplate.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource ExceptionConverter}}" />
                            </DataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
            <Border Background="Black">
                <Image />
            </Border>
            <Frame Content="{Binding SelectedException, Converter={StaticResource ExceptionPageConverter}}" Width="400"/>
        </StackPanel>
    </Grid>
</Page>
